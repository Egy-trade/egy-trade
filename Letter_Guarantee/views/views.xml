<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="letter_guarantee_view_form" model="ir.ui.view">
            <field name="name">letter.guarantee.form</field>
            <field name="model">letter.guarantee</field>
            <field name="arch" type="xml">
                <form string="Letter Of Guarantee">
                    <sheet string="Letter Of Guarantee">
                        <div class="oe_title">
                            <h1>
                                <field name='name'/>
                            </h1>
                        </div>
                        <group>
                            <field name="type" widget="radio" options="{'horizontal': True}"/>
                        </group>
                        <group>
                            <group>
                                <field name="currency_id"/>
                                <field name="amount"/>
                                <field name="cover_percentage"/>
                                <field name="journal_id"/>
                                <field name="bank_id"/>
                                <field name="analytic_id"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="date_issue"/>
                                <field name="expire_date"/>
                                <field name="request_lg_id" string="LG Request" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notice">
                                <div>
                                    <field name="notice"/>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="letter_guarantee_view_tree" model="ir.ui.view">
            <field name="name">letter.guarantee.tree</field>
            <field name="model">letter.guarantee</field>
            <field name="arch" type="xml">
                <tree string="Letters Of Guarantee">
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="partner_id"/>
                    <field name="bank_id"/>
                    <field name="date_issue"/>
                    <field name="expire_date"/>
                </tree>
            </field>
        </record>

        <record id="letter_guarantee_action" model="ir.actions.act_window">
            <field name="name">Letters Of Guarantee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">letter.guarantee</field>
            <field name="view_mode">tree,form</field>

        </record>

