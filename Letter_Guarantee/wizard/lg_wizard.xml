<odoo>
    <record id="wizard_letter_guarantee_view" model="ir.ui.view">
        <field name="name">wizard.letter.guarantee</field>
        <field name="model">letter.guarantee</field>
        <field name="arch" type="xml">
            <form string="Letter of guarantee">
                <div class="oe_title">
                    <h1>
                        <field name='name'/>
                    </h1>
                </div>
                <group>
                    <field name="type" widget="radio" options="{'horizontal': True}"/>
                </group>
                <group>
                    <group>
                        <field name="currency_id"/>
                        <field name="amount"/>
                        <field name="cover_percentage"/>
                        <field name="journal_id"/>
                        <field name="bank_id"/>
                        <field name="analytic_id"/>
                    </group>
                    <group>
                        <field name="partner_id"/>
                        <field name="date_issue"/>
                        <field name="expire_date"/>
                        <field name="request_lg_id" invisible="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Notice">
                        <div>
                            <field name="notice"/>
                        </div>
                    </page>
                </notebook>
                <footer>
                    <button name="action_validate_lg" string="Validate" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="letter_guarantee_wizard_action_id" model="ir.actions.act_window">
        <field name="name">letter.guarantee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">letter.guarantee</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>