<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--    Sales Person Team Leader Can See Other Opps for only team
                Other members can see all opps

           -->
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'crm'), ('name', '=', 'crm_rule_personal_lead')]"/>
            </function>
            <value eval="{'noupdate': False}"/>
        </function>

        <record id="crm.crm_rule_personal_lead" model="ir.rule">
            <field name="name">Personal Leads</field>
            <field ref="crm.model_crm_lead" name="model_id"/>
            <field name="domain_force">['|', '|','|',('user_id','=',user.id),('user_id','=',False),
                ('team_id.user_id', '=', user.id), ('team_id', '=', user.sale_team_id.id)]
            </field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>


        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'crm'), ('name', '=', 'crm_rule_personal_lead')]"/>
            </function>
            <value eval="{'noupdate': True}"/>
        </function>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'base'), ('name', '=', 'res_partner_rule_private_employee')]"/>
            </function>
            <value eval="{'noupdate': False}"/>
        </function>
        <record id="base.res_partner_rule_private_employee" model="ir.rule">
            <field name="active" eval="False"/>
        </record>


        <record id="crm_rule_salesteam_own_customers" model="ir.rule">
            <field name="name">See own customers</field>
            <field ref="base.model_res_partner" name="model_id"/>
            <field name="domain_force">['|',('type','=','contact'),'&amp;',('user_id','=',user.id),('customer_rank','=',1)]</field>
            <field name="groups" eval="[(4, ref('egy-trade_custom.group_see_own_customers'))]"/>
        </record>

    </data>
</odoo>