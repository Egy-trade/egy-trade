<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_sale_restriction_form_view" model="ir.ui.view">
        <field name="name">sale.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_res_ids" widget="many2many_tags" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', partner_res_ids)]</attribute>
                </xpath>
        </field>
    </record>
</odoo>
