<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="partner_res_users_form" model="ir.ui.view">
        <field name="name">prt.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr='//page[@name="access_rights"]/group' position='before'>
                <group name="partners_restrict" string="Partners">
                    <field name="partner_res_ids" widget="many2many_tags" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
