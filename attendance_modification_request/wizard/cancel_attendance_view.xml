<odoo>
    <record id="view_cancellation_reason_form" model="ir.ui.view">
        <field name="name">cancellation.reason.form</field>
        <field name="model">cancellation.reason</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_reject" type="object" string="Save Reason" class="oe_highlight"
                            data-hotkey="q"/>
                    <button type="object" special="cancel" data-hotkey="z" string="Discard"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cancellation_reason" model="ir.actions.act_window">
        <field name="name">Cancellation Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancellation.reason</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>

    </record>

</odoo>