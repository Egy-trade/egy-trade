<odoo>
    <record id="initial_wizard_letter_guarantee_view" model="ir.ui.view">
        <field name="name">wizard.letter.guarantee</field>
        <field name="model">initial.letter.guarantee</field>
        <field name="arch" type="xml">
            <form string="Letter of guarantee">
                <div class="oe_title">
                    <h1>
                        <field name='name'/>
                    </h1>
                </div>
                <group>
                    <field name="type" widget="radio" options="{'horizontal': True}"/>
                </group>
                <group>
                    <group>
                        <field name="currency_id" readonly="1" options="{'no_create':True}"
                        />
                        <field name="amount" readonly="1"/>
                        <field name="journal_id" options="{'no_create':True}"
                        />
                        <field name="bank_id" options="{'no_create':True}" invisible="1"
                        />
                        <field name="analytic_id" options="{'no_create':True}"
                        />
                        <field name="bank_amount" required="1"/>
                        <field name="tax" required="1"/>

                    </group>
                    <group>
                        <field name="partner_id" readonly="1" options="{'no_create':True}"
                        />
                        <field name="date_issue" options="{'no_create':True}"
                        />
                        <field name="expire_date"/>
                        <field name="project"/>
                        <field name="lg_ref" required="1"
                        />
                        <field name="request_lg_id" string=" Initial LG Request"/>
                    </group>
                </group>
                <notebook>
                    <page string="Notice">
                        <div>
                            <field name="notice"/>
                        </div>
                    </page>
                </notebook>
                <footer>
                    <button name="post" string="Validate" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="initial_letter_guarantee_wizard_action_id" model="ir.actions.act_window">
        <field name="name">letter.guarantee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">initial.letter.guarantee</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="final_wizard_letter_guarantee_view" model="ir.ui.view">
        <field name="name">wizard.letter.guarantee</field>
        <field name="model">final.letter.guarantee</field>
        <field name="arch" type="xml">
            <form string="Letter of guarantee">
                <div class="oe_title">
                    <h1>
                        <field name='name'/>
                    </h1>
                </div>
                <group>
                    <field name="type" widget="radio" options="{'horizontal': True}"/>
                </group>
                <group>
                    <group>
                        <field name="currency_id" readonly="1" options="{'no_create':True}"
                        />
                        <field name="amount" readonly="1"/>
                        <field name="journal_id" options="{'no_create':True}"
                        />
                        <field name="bank_id" options="{'no_create':True}" invisible="1"
                        />
                        <field name="analytic_id" options="{'no_create':True}"
                        />
                        <field name="bank_amount" required="1"/>
                        <field name="tax" required="1"/>

                    </group>
                    <group>
                        <field name="partner_id" readonly="1" options="{'no_create':True}"
                        />
                        <field name="date_issue"/>
                        <field name="expire_date"/>
                        <field name="project"/>
                        <field name="lg_ref" required="1"
                        />
                        <field name="request_lg_id" string="Final LG Request"/>
                    </group>
                </group>
                <notebook>
                    <page string="Notice">
                        <div>
                            <field name="notice"/>
                        </div>
                    </page>
                </notebook>
                <footer>
                    <button name="post" string="Validate" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="final_letter_guarantee_wizard_action_id" model="ir.actions.act_window">
        <field name="name">letter.guarantee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">final.letter.guarantee</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>