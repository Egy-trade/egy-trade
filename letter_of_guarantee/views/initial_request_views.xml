<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="initial_request_letter_guarantee_view_form" model="ir.ui.view">
            <field name="name">initial.request.letter.guarantee.form</field>
            <field name="model">initial.request.letter.guarantee</field>
            <field name="arch" type="xml">
                <form string="Initial LG Request">
                    <header>
                        <button name="action_approve" string="VP Approval" type="object" states="draft"
                                class="btn-primary"
                                groups="letter_of_guarantee.vp_approved"/>
                        <button name="action_create_lg" type="object" string="Create LG" states="financial_Approve"
                                class="btn-primary"/>
                        <button name="button_financial_approve" string="Review" type="object"
                                states="approved"
                                class="btn-primary"/>
                        <button name="back_to_draft" type="object" string="Back To Draft"
                                states="approved,financial_Approve"/>
                        <button name="lg_reject" type="object" string="Reject"
                                states="approved,financial_Approve" class="btn-danger"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,approved,financial_Approve,done" nolabel="1" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button"
                                    name="get_initial_lg"
                                    type="object"
                                    attrs="{'invisible': [('state', '!=', 'done')]}"
                                    icon="fa-check text-success">
                                <span style="color:green;">Letter Of Guarantee</span>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name='name'/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" options="{'no_create':True}"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="currency_id" options="{'no_create':True}"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="project_amount" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="amount"/>
                                <field name="project" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="lg_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="login_user_id" options="{'no_create':True}"/>
                                <field name="department_id" options="{'no_create':True}"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="lg_percentage" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="reason" attrs="{'readonly':[('state','!=','draft')]}"/>


                            </group>
                            <h1>
                                <label style="color:black;font-size: 18px;" for="comment" name="comment"/>
                            </h1>

                            <field name="comment" attrs="{'readonly':[('state','in',['done','reject'])]}"/>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="initial_request_letter_guarantee_view_tree" model="ir.ui.view">
            <field name="name">initial.request.letter.guarantee.tree</field>
            <field name="model">initial.request.letter.guarantee</field>
            <field name="arch" type="xml">
                <tree string="Initial LG Request">
                    <field name="name"/>
                    <field name="login_user_id"/>
                    <field name="partner_id"/>
                    <field name="currency_id"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="initial_request_letter_guarantee_action" model="ir.actions.act_window">
            <field name="name">Initial LG Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">initial.request.letter.guarantee</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_initial_request_letter_guarantee"
                  name="Initial LG Request"
                  sequence="0"
                  groups="letter_of_guarantee.initial_lg"
                  parent="letter_of_guarantee.menu_main_lg"
                  action="initial_request_letter_guarantee_action"/>

        <menuitem id="letter_guarantee_menu"
                  name="Letter Of Guarantee"
                  action="Letter_Guarantee.letter_guarantee_action"
                  parent="letter_of_guarantee.menu_main_lg"
                  sequence="1"/>

    </data>
</odoo>