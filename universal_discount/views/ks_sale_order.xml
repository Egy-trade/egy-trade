<odoo>
    <data>
        <record id="ks_discount_sale_order_form_inherited" model="ir.ui.view">
            <field name="name">ks.discount.sale_order.form.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/group" position="before">
                    <div class="ks_container">
                        <field name="ks_enable_discount" invisible="1"/>
                        <label for="ks_global_discount_type" string="Universal Discount Type:" attrs="{'invisible':[('ks_enable_discount','!=',True)]}"/>
                        <field name="ks_global_discount_type" class="oe_inline" attrs="{'invisible':[('ks_enable_discount','!=',True)],
                                                                                         'readonly':[('ks_enable_discount','!=',True)]}"/>
                    </div>
                    <div class="ks_container">
                        <label for="ks_global_discount_rate" string="Universal Discount:" attrs="{'invisible':[('ks_enable_discount','!=',True)]}"/>
                        <field name="ks_global_discount_rate" class="oe_inline" attrs="{'invisible':[('ks_enable_discount','!=',True)],'readonly':[('ks_enable_discount','!=',True)]}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='discount']" position="before">
                    <field name="discount_2"/>
                    <field name="discount_3"/>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="before">
                    <field name="amount_undiscounted" attrs="{'invisible':[('ks_global_discount_rate','=',0)]}"/>
                    <field name="discount_amount" attrs="{'invisible':[('ks_global_discount_rate','=',0)]}"/>
                </xpath>
<!--                <xpath expr="//field[@name='payment_term_id']" position="after">-->
<!--                    <field name="apply_discount_on_tax_amount"/>-->
<!--                </xpath>-->


                <!--                <xpath expr="//page[@name='order_lines']" position="inside">-->
<!--                    <field name="ks_amount_discount" attrs="{'invisible':[('ks_enable_discount','!=',True),('ks_amount_discount','=',0)]}"/>-->
<!--                </xpath>-->
            </field>
        </record>
    </data>
</odoo>