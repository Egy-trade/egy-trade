<odoo>
    <data>

        <record id="ks_global_discount_purchase_view_form" model="ir.ui.view">
            <field name="name">ks.global.discount.purchase.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[1]/group" position="after">
                    <div class="ks_container">
                        <field name="ks_enable_discount" invisible="1"/>
                        <label for="ks_global_discount_type" string="Universal Discount Type:" attrs="{'invisible':[('ks_enable_discount','!=',True)]}"/>
                        <field name="ks_global_discount_type" class="oe_inline" attrs="{'invisible':[('ks_enable_discount','!=',True)],'readonly':[('ks_enable_discount','!=',True)]}"/>
                    </div>
                    <div class="ks_container">
                        <label for="ks_global_discount_rate" string="Universal Discount:" attrs="{'invisible':[('ks_enable_discount','!=',True)]}"/>
                        <field name="ks_global_discount_rate" class="oe_inline" attrs="{'invisible':[('ks_enable_discount','!=',True)],'readonly':[('ks_enable_discount','!=',True)]}"/>
                    </div>
                </xpath>
<!--                <xpath expr="//page[@name='products']" position="inside">-->
<!--                    <field name="ks_amount_discount" attrs="{'invisible':[('ks_enable_discount','!=',True)]}" />-->
<!--                </xpath>-->
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="discount_1" />
                    <field name="discount_2" />
                    <field name="discount" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>